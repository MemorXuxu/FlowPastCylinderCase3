    "(p|pcorr)Final"
    {
        $p;
        tolerance       1e-06;
        relTol          0;
    }

    "(k|U|epsilon|omega)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0;
    }

    "(k|U|epsilon|omega)Final"
    {
        $U;
        tolerance       1e-08;
        relTol          0;
    }

	pAco
   {
        solver		    PBiCGStab;
        preconditioner	DIC;
        tolerance 	    1e-6;
        relTol		    0;
   }
   
   nuTilda
   {
       solver          PBiCG;
       preconditioner  DILU;
       tolerance       1e-08;
       relTol          0;
   }

   Phi
   {
       solver          GAMG;
       smoother        DIC;
       tolerance       1e-06;
       relTol          0;
   }
}

// - Transient Control
    PIMPLE
    {
        // momentumPredictor   yes;   // high Reynolds - default yes
        nOuterCorrectors 1;
        nCorrectors      3;
        nNonOrthogonalCorrectors 1;
    }

    PISO
    {
        nCorrectors     2;
        nNonOrthogonalCorrectors 1;
    }

// - Steady Contorl
    SIMPLE
    {
        nNonOrthogonalCorrectors 1;
        consistent      yes;
    }
    
    relaxationFactors
    {
        nuTilda         0.9;
